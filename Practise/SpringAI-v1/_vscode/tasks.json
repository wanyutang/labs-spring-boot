{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Maven: Clean Install",
      "type": "shell",
      "command": "./mvnw clean install",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Maven: Spring Boot Run",
      "type": "shell",
      "command": "./mvnw spring-boot:run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Tomcat.*$",
          "endsPattern": "^.*Started DemoApplication.*$"
        }
      }
    },
    {
      "label": "Maven: Clean",
      "type": "shell",
      "command": "./mvnw clean",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Maven: Test",
      "type": "shell",
      "command": "./mvnw test",
      "group": "test",
      "problemMatcher": []
    }
  ]
}
